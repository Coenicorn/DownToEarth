{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "lib",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "lib": [
            "esnext",
            "dom"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
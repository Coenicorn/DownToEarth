{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "typeRoots": [
            "src/assets/"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "outDir": "./lib",
        "removeComments": true,
        "strictNullChecks": true,
        "alwaysStrict": true
    },
    "include": [
        "src/*/**.ts",
    ]
}
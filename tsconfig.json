{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "lib",
        "module": "ESNext",
        "moduleResolution": "classic",
        "strict": true /* Enable all strict type-checking options. */,
        "pretty": true /* Stylize errors and messages using color and context. */,
        "lib": [
            "esnext",
            "dom"
        ],
        "typeRoots": [
            "src/**/*.d.ts",
        ],
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "./node_modules"
    ]
}